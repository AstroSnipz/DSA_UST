package Sorting;

public class BubbleSort {
	
	public static void bubbleSort(int[] arr) {
		
		for(int i=0; i<arr.length; i++) {
			boolean swapped = false;
			for(int j=0; j<(arr.length-i-1); j++) {
				int temp;
				if(arr[j]>arr[j+1]) {
					temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
					swapped = true;
				}
			}
			if(!swapped) {
				break;
			}
		}
	}

	public static void main(String[] args) {
		
		int[] arr = {1, 2, 3, 4, 5};
		bubbleSort(arr);
		for(int i=0; i<arr.length; i++) {
			System.out.print(arr[i]+" ");
		}	
	}
}
